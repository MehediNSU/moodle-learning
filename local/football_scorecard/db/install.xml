<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/football_scorecard/db" VERSION="2024111200" COMMENT="Football Scorecard plugin">
    <TABLES>
        <TABLE NAME="football_scorecard_players" COMMENT="Player score data">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="ID"/>
                <FIELD NAME="player_name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Player name"/>
                <FIELD NAME="goal_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Goals"/>
                <FIELD NAME="match_date" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Date of the match"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
